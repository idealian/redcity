<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8"/>
		<title>Redcity</title>
		<!--[if lt IE 9]>
			<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
		<![endif]-->
    <%= stylesheet_link_tag :all %>
    <%= csrf_meta_tag %>


		<meta name="viewport" content="initial-scale=1.0, width=device-width, maximum-scale=1.0"/>
		<script type="text/javascript"
		    src="http://maps.google.com/maps/api/js?sensor=false">
		</script>
		

		
	</head>

	<body>

  <div id="container">
	  <section id="flash">
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, :id => "flash_#{name}" %>
    <% end %>
	  </section>
	  
    <header> 
      <section id="user">
        <% if current_user %>
          <%= image_tag(current_user.picture_url) %>
          <%= link_to current_user.name, profile_path(current_user) %>
          <%= link_to t(:logout), '/logout' %>
        <% else %>
          <%= link_to t(:login_signup), '/login' %>
        <% end %>
      </section>
      
      <h1>RedCity</h1>
      
      <%= link_to t(:activities), '/messages' %> | 
      <%= link_to t(:profiles), '/profiles' %>
    </header>

    <section id="hero">
    </section>
    
    <section id="content">
      <%= yield %>
    </section>
    <footer>
      <hr/>
      
      Red City Crew@Railsrumble
    </footer>
  </div>

  	<!-- Rails Rumble sash! -->
    <script type="text/javascript">
      var rumbleUrl = 'http://railsrumble.com';
    </script>
    <script type="text/javascript" src="http://blog.railsrumble.com/javascripts/rumble-r10-sash.js"></script>

		<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"></script>

		<%= javascript_include_tag 'jquery.embedly.min', 'application' %>
	</body>
</html>