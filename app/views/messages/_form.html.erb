<%= simple_form_for @message do |f| %>
	<%= f.input :label, :as => :select, :prompt => '-- Please select a label --', :collection => Message::LABELS %>
  <%= f.input :content, :as => :text, :input_html => {:rows => 3, :cols => 80 } %>
  <%= f.input :location, :input_html => {:placeholder => "Specify a location"} %>
  <%= f.button :submit %>
<% end %>
