<li class="activity">
  <small class="label"><%= message.label %></small>

  <div class="thumb">
    <%= image_tag message.profile.picture_url %>
  </div>
  
  <div class="content">
    <h5><%= message.profile.name %></h5>
	
  	<%= auto_link(message.content) %> </br>	
  	<small>
  	  <%= time_ago_in_words(message.created_at) %>
  	  
    	<%= link_to "view", "" %>
    	<%= link_to "reply", "" %>
    	<%= link_to "share", "" %>
    	<%= link_to "delete", message, :method => :delete, :confirm => t(:delete_message_confirm) if message.profile == current_user%>
  	</small>
	</div>
	<br style="clear:both"/>
</li>